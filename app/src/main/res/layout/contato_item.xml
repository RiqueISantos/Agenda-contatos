<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marcos"
            android:textSize="20sp"
            android:textColor="@color/textDark"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtSobrenome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duarte Gomes"
            android:textSize="18sp"
            android:textColor="@color/textDark"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtCelular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(21) 1156-0515"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_gravity="center"/>

        <!-- NOVO CAMPO EMAIL -->
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@exemplo.com"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:id="@+id/btAtualizar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_atualizar"
                android:contentDescription="Atualizar"
                android:padding="8dp"
                android:layout_marginEnd="16dp"/>

            <ImageView
                android:id="@+id/btDeletar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_deletar"
                android:contentDescription="Deletar"
                android:padding="8dp"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
